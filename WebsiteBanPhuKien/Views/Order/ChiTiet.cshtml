@model WebsiteBanPhuKien.Models.DonHang
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<h1>Chi tiết đơn hàng #@Model.MaDon</h1>
<p><strong>Ngày đặt:</strong> @Model.NgayDat.ToString("dd/MM/yyyy")</p>
<p><strong>Tổng tiền:</strong> @Model.TongTien.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</p>
<p><strong>Trạng thái:</strong> @Model.TrangThai</p>

<h2>Chi tiết</h2>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietDonHangs)
        {
            <tr>
                <td>@item.PhuKien.TenPhuKien</td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                <td>@((item.SoLuong * item.DonGia).ToString("C", new System.Globalization.CultureInfo("vi-VN")))</td>
            </tr>
        }
    </tbody>
</table>